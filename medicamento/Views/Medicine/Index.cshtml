@{
    ViewData["Title"] = "Index";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Medicine Mamagement</h1>
</div>

<div class="row">

    <div class="col-xl-8 col-lg-7">

        <!-- Area Chart -->
        <div class="card mb-4 shadow">
            <div class="card-header py-3">
                <h6 class="font-weight-bold text-primary m-0">Area Chart</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="myAreaChart"></canvas>
                </div>
                <hr>
                @* Styling for the area chart can be found in the
                <code>/js/demo/chart-area-demo.js</code> file. *@
            </div>
        </div>

        <!-- Bar Chart -->
        <div class="card mb-4 shadow">
            <div class="card-header py-3">
                <h6 class="font-weight-bold text-primary m-0">Bar Chart</h6>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="myBarChart"></canvas>
                </div>
                <hr>
                @*  Styling for the bar chart can be found in the
                <code>/js/demo/chart-bar-demo.js</code> file. *@
            </div>
        </div>

    </div>

    <!-- Donut Chart -->
    <div class="col-xl-4 col-lg-5">
        <div class="card mb-4 shadow">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3">
                <h6 class="font-weight-bold text-primary m-0">Donut Chart</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="chart-pie pt-4">
                    <canvas id="myPieChart"></canvas>
                </div>
                <hr>
                @*  Styling for the donut chart can be found in the
                <code>/js/demo/chart-pie-demo.js</code> file. *@
            </div>
        </div>
    </div>
</div>

