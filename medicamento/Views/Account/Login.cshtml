@using medicamento.ViewModels.Account
@model LoginViewModel;

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-5">
        <!-- Basic login form-->
        <div class="card mt-5 rounded-lg border-0 shadow-lg">
            <div class="card-header justify-content-center"><h3 class="fw-light my-4">Login</h3></div>
            <div class="card-body">
                <!-- Login form-->
                <form asp-action="Login" method="post">
                    <!-- Form Group (email address)-->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label class="small mb-1" for="inputEmailAddress">Email</label>
                        <input asp-for="Email" class="form-control" id="inputEmailAddress" type="email" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <!-- Form Group (password)-->
                    <div class="mb-3">
                        <label class="small mb-1" for="inputPassword">Password</label>
                        <input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <!-- Form Group (remember password checkbox)-->
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" id="rememberPasswordCheck" type="checkbox" value="" />
                            <label class="form-check-label" for="rememberPasswordCheck">Remember password</label>
                        </div>
                    </div>
                    <!-- Form Group (login box)-->
                    <div class="d-flex align-items-center justify-content-between mb-0 mt-4">
                        <a asp-controller ="Account" asp-action="VerifyEmail" class="small" >Forgot Password?</a>
                        @* <a class="btn btn-primary" href="dashboard-1.html">Login</a> *@
                        <input type="submit" value="Login" class="btn btn-primary" />

                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <div class="small"><a href="auth-register-basic.html">Need an account? Sign up!</a></div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}
}
